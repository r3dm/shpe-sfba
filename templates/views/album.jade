extends ../layouts/default

block intro
  .container
    h1 #{gallery.name}

block content
  .headline-min
    .headline_container_left
      .headline_container_right
        .section.container
  .gallery_page-container
    .inner_page-bg
      ul.nav.nav-pills.col-sm-offset-1
        li.active
          a.navigation(href="/gallery")
            span.glyphicon.glyphicon-chevron-left
            |  Back
      if gallery.images.length
        #links
        each photo in gallery.images
          .gallery_photo
            a(href="#{photo.url}" title=photo.name data-gallery)
              img(src=photo.fill(200,200), alt=gallery.name)
      else
        h3.text-muted There are no images in this gallery.

  .blueimp-gallery.blueimp-gallery-controls#blueimp-gallery(data-use-bootstrap-modal="false")
    .slides
    h3.title
    a.prev <
    a.next >
    a.close x
    a.play-pause
    ol.indicator

    .modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type="button") &times;
            h4.modal-title
          .modal-body.next
          .modal-footer
            button.btn.btn-default.pull-left.prev(type="button")
              i.glyphicon.glyphicon-chevron-left
              | Previous
            button.btn.btn-primary.next
              | Next
              i.glyphicon.glyphicon-chevron-right
