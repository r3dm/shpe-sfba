@require 'utils'
/* footer styles */
footer
  background-color: $footer_bg_color
  min-height 350px
  font-size 12px
  color $footer_font_color

  p
    font-size 12px

  h3
    font-weight 300
    color white
    font-size 1.2em

  hr
    margin 5px 0
    color $footer_font_color

  a
    color $footer_font_color
    &:hover
      text-decoration none
      color white

  .btn-default
    width 105px
    height 25px
    color white
    background-color $footer_button_color
    float right
    font-style italic
    text-align left
    line-height 13px

  input.form-control
    height 25px
    margin-bottom 10px

  @media (max-width: 767px)
    .footer_form-container
      width 300px
      margin 0 auto
      display block

.footer-about
  p
    font-size 1.5rem
/* end footer */
